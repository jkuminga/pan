<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>전적 입력</title>
    <style>
        :root {
            --bg: #0f172a;
            --panel: #111827;
            --muted: #94a3b8;
            --text: #e2e8f0;
            --accent: #38bdf8;
            --border: #1f2937;
        }
        * { box-sizing: border-box; }
        body {
            margin: 0;
            padding: 0;
            background: radial-gradient(110% 110% at 15% 15%, #0b1224, #0f172a 60%, #0b1020);
            color: var(--text);
            font-family: "Pretendard", "Segoe UI", system-ui, -apple-system, sans-serif;
        }
        .page { max-width: 900px; margin: 0 auto; padding: 24px; }
        .panel {
            background: rgba(17, 24, 39, 0.9);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 12px 32px rgba(0,0,0,0.35);
        }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; }
        h1 { margin: 0; font-size: 20px; letter-spacing: 0.4px; }
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 14px;
        }
        .col {
            border: 1px dashed var(--border);
            border-radius: 12px;
            padding: 12px;
            background: rgba(12, 18, 32, 0.8);
        }
        .title-row { display: flex; align-items: center; justify-content: space-between; gap: 8px; margin-bottom: 10px; }
        .col h3 { margin: 0; color: var(--muted); }
        .team-check { display: inline-flex; align-items: center; gap: 6px; color: var(--muted); font-size: 13px; }
        .inputs { display: grid; gap: 8px; }
        .inputs input,
        .inputs select {
            width: 100%;
            height: 42px;
            border-radius: 10px;
            border: 1px solid var(--border);
            background: #0b1220;
            color: var(--text);
            padding: 0 12px;
            font-size: 14px;
        }
        .stake-row {
            margin-top: 16px;
            display: grid;
            gap: 8px;
        }
        .stake-row label { color: var(--muted); font-size: 14px; }
        .stake-row input {
            width: 100%;
            height: 44px;
            border-radius: 12px;
            border: 1px solid var(--border);
            background: #0b1220;
            color: var(--text);
            padding: 0 12px;
            font-size: 15px;
        }
        .submit-row {
            margin-top: 18px;
            display: flex;
            justify-content: flex-end;
        }
        .submit-row button {
            height: 44px;
            padding: 0 16px;
            border-radius: 12px;
            border: none;
            background: linear-gradient(135deg, #38bdf8, #22d3ee);
            color: #0b1220;
            font-weight: 700;
            cursor: pointer;
        }
        @media (max-width: 640px) {
            .header { flex-direction: column; align-items: flex-start; gap: 10px; }
            .submit-row { justify-content: stretch; }
            .submit-row button { width: 100%; }
        }
    </style>
</head>
<body>
    <div class="page">
        <form class="panel" action="/history" method="post">
            <div class="header">
                <h1>전적 입력</h1>
            </div>

            <input type="hidden" name="win" id="winInput" value="BLUE">
            <% const playersSafe = players || []; %>

            <div class="form-grid">
                <div class="col">
                    <div class="title-row">
                        <h3>블루팀</h3>
                        <label class="team-check">
                            <input type="checkbox" id="winBlue" checked>
                            <span>블루 승</span>
                        </label>
                    </div>
                    <div class="inputs">
                        <select name="blue_1" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="blue_2" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="blue_3" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="blue_4" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="blue_5" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="col">
                    <div class="title-row">
                        <h3>레드팀</h3>
                        <label class="team-check">
                            <input type="checkbox" id="winRed">
                            <span>레드 승</span>
                        </label>
                    </div>
                    <div class="inputs">
                        <select name="red_1" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="red_2" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="red_3" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="red_4" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                        <select name="red_5" class="player-select">
                            <option value="">선택</option>
                            <% playersSafe.forEach((p) => { %>
                                <option value="<%= p.id %>"><%= p.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>

            <div class="stake-row">
                <label for="stake">판 돈</label>
                <input type="number" name="stake" id="stake" placeholder="예: 2000">
            </div>

            <div class="submit-row">
                <button type="submit">전적 추가</button>
            </div>
        </form>
    </div>

    <script>
        const winBlue = document.getElementById('winBlue');
        const winRed = document.getElementById('winRed');
        const winInput = document.getElementById('winInput');
        const playerSelects = Array.from(document.querySelectorAll('.player-select'));

        const syncWin = (team) => {
            if (team === 'BLUE') {
                winBlue.checked = true;
                winRed.checked = false;
                winInput.value = 'BLUE';
            } else {
                winBlue.checked = false;
                winRed.checked = true;
                winInput.value = 'RED';
            }
        };

        winBlue.addEventListener('change', () => {
            if (winBlue.checked) {
                syncWin('BLUE');
            } else if (!winRed.checked) {
                syncWin('BLUE'); // 최소 한 팀은 선택 유지
            }
        });

        winRed.addEventListener('change', () => {
            if (winRed.checked) {
                syncWin('RED');
            } else if (!winBlue.checked) {
                syncWin('RED');
            }
        });

        syncWin('BLUE');

        const refreshOptions = () => {
            const selectedValues = new Set(
                playerSelects
                    .map((sel) => sel.value)
                    .filter((v) => v !== '')
            );

            playerSelects.forEach((sel) => {
                const current = sel.value;
                Array.from(sel.options).forEach((opt) => {
                    if (opt.value === '') {
                        opt.disabled = false;
                        return;
                    }
                    if (opt.value === current) {
                        opt.disabled = false;
                    } else {
                        opt.disabled = selectedValues.has(opt.value);
                    }
                });
            });
        };

        playerSelects.forEach((sel) => {
            sel.addEventListener('change', refreshOptions);
        });

        refreshOptions();
    </script>
</body>
</html>
